@model IEnumerable<ClientsCRUD.Models.Clients>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        For CRUD
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="20%">@obj.FirstName</td>
                        <td width="20%">@obj.LastName</td>
                        <td width="20%">@obj.PhoneNumber</td>
                        <td width="30%">@obj.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No clients exits.</p>
    }
