@model IEnumerable<ClientsCRUD.Models.Clients>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Clients List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Clients" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Client

            </a>
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        For CRUD
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="20%">@obj.FirstName</td>
                        <td width="20%">@obj.LastName</td>
                        <td width="20%">@obj.PhoneNumber</td>
                        <td width="30%">@obj.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No clients exits.</p>
    }
